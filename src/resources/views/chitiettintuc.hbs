<div class="chitiettintuc">
    <div>
        {{>header}}
    </div>
    <div class="main-home">
        <div class="main-body">
            <div class="list-left">
                <div class="main-list-left">
                    <div class="user_create">
                        <img
                            src='https://babycaredoan.s3.ap-southeast-1.amazonaws.com/logo.png'
                            alt='ảnh thẻ header'
                            style='height: 35px;width: 35px;border-radius: 20px;margin-right: 5px;align-self: center; '/>
                        <div class="thongtin_user">
                            <b class="name_page" style="font-weight: 600;font-size: 16px;">{{data.authorName}}</b>
                            <b class="ngay_create">12/03/2023</b>
                        </div>    
                    </div>

                    <div class="main_tintuc">
                        <p style="" class="title">{{data.title}}</p>
                        <p  style="margin-top:-15px" class="sub_main">{{data.content}}</p>
                    </div>

                    <div class="div_luotxem_cmt">
                        <div class="luotxem"> <i class="fas fa-eye"></i><p>1.2K</p></div>
                        <div class="like"> <i class="fas fa-thumbs-up"></i><p>{{data.countLike}}</p></div>
                        <div class="cmt"> <i class="fa fa-commenting"></i><p>{{data.countLike}}</p></div>
                    </div>

                    <div class="div_cmt_tintuc">
                        <p>Tham gia bình luận</p>
                        <div style="  width: 100%; display: flex; flex-direction:row; align-items: center;justify-content: center;">
                            <div class="div_main_cmt">
                                <img
                                src='https://babycaredoan.s3.ap-southeast-1.amazonaws.com/logo.png'
                                alt='ảnh thẻ header'
                                style='height: 35px;width: 35px;border-radius: 20px;margin-right: 5px; margin-bottom:12px '/>
                                <div class="div_input_cmt">
                                    <form action="/thembinhluan" method="POST">
                                        <input  type="hidden"  name="userName" value={{username}}
                                                class="form-control" >
                                        <input  type="hidden"  name="newId" value={{data.idNew}}
                                                class="form-control" >
                                        <input  type="hidden"  name="status" value="1"
                                                class="form-control" >
            
                                        <input
                                        type='text'
                                        id='searchHeader'
                                        name='content'
                                        placeholder='Tìm kiếm bài viết...'
                                        required=''
                                        />
                                        <a class="icon_camxuc">
                                            <i
                                                class='fa fa-smile-o'
                                                aria-hidden='true'
                                            ></i>
                                        </a>
                                        <button type='submit'><i
                                            class='	fa fa-send'
                                            aria-hidden='true'
                                        ></i></button>
                                    </form>
                                </div>
                            </div>
                         </div>
                    </div>

                    <div class="div_list_cmt_tintuc">
                        {{#each listComment}}
                            <div class="item_cmt">
                                <img
                                src='https://babycaredoan.s3.ap-southeast-1.amazonaws.com/logo.png'
                                alt='ảnh thẻ header'
                                style='height: 35px;width: 35px;border-radius: 20px;margin-right: 5px; margin-bottom:12px '/>
                                <div class="item_main_cmt">
                                    <p class="name_cmt">{{this.userName}}</p>
                                    <p>{{this.content}}</p>
                                </div>
                            </div>
                            <p class="time_cmt">{{this.createdDate}}</p>
                         {{/each}}
                    </div>
                    
                </div>
            </div>

        
        </div>

        
    </div>
 </div>
        
        
