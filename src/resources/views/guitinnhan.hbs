    <div class="guitinnhanTV">
    <div>
        {{>header}}
    </div>
    <div class="main-home">
        <div class="poster">
            <img
                src='https://babycaredoan.s3.ap-southeast-1.amazonaws.com/test/poster_trangchu.jpeg'
                alt='ảnh thẻ header'
                style='height: 100px;width: 100%;align-self: center;'
            />
        </div>

        <div class="main-body">
            <div class="list-left">
                <div class="main-list-left">
                    <label><i class="fa fa-comments" aria-hidden="true"></i>TIN NHẮN CỦA BẠN</label>
                    <div class="list_tinhan">
                          {{#each listData}}
                            {{#if this.type}}
                                    <div class="message sended" >
                                        <div class="content">
                                            <p>{{this.message}}</p>
                                            {{!-- <p style="font-size: 12px;">{{changeNgay this.createdDate}} {{getTime this.createdDate}}</p> --}}
                                        </div>
                                    </div>
                            {{else}}
                                    <div class= "message recieved" >
                                        <div class="content">
                                            <p>{{this.message}}</p>
                                            {{!-- <p style="font-size: 12px;">{{changeNgay this.createdDate}} {{getTime this.createdDate}}</p> --}}
                                        </div>
                                    </div>
                            {{/if}}
                          {{/each}}
                    </div>
                     <div class="form_gui">
                        <form action='/guitinnhan' id='form-login' method='POST'>
                            <div class='div_input_row'>
                                <input  type="hidden"  name="userName" value={{username}}
                                    class="form-control" >
                                <input  type="hidden"  name="userImage" value={{avatar}}
                                    class="form-control" >
                            
                                <input  type="hidden"  name="type" value=true
                                        class="form-control" >
                                <textarea autocomplete='new-password'
                                    class='input'
                                    id='TinNhan'
                                    name='message'
                                    placeholder='Nhập tin nhắn bạn muốn gửi'
                                    required='required'
                                    type='text'
                                    value=''
                                    rows="5" 
                                    cols="40" ></textarea>
                            </div>
                            
                            
                            <div class="div_btn">
                                <input type='submit' class='button btnChangeThongtin' value='GỬI' />
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="list-right">
                <div class="div_avatar">
                    <img src={{avatar}}
                        alt='ảnh thẻ header'
                        style='height: 150px;width: 150px;border-radius: 100px;'/>  
                    <p>{{username}}</p> 
                </div>
                {{#ifCond role '==' 1}}
                 <a class="item_menu_right" href='/dangtin'>
                    <img src='https://babycaredoan.s3.ap-southeast-1.amazonaws.com/iconListNew.png'
                        alt='ảnh thẻ header'
                        style='height: 28px; margin:14px 15px 14px 18px;'/>  
                    <p>Bài viết</p> 
                </a>

                 <a class="item_menu_right" href='/danhsachtincho'>
