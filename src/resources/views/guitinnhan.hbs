    <div class="guitinnhanTV">
    <div>
        {{>header}}
    </div>
    <div class="main-home">
        <div class="main-body">
            <div class="list-left">
                <div class="main-list-left">
                    <label>TIN NHẮN CỦA BẠN</label>
                    <div class="list_tinhan">
                          {{#each listData}}
                            {{#if this.type}}
                                    <div class="message sended" >
                                        <div class="content">
                                            <p>{{this.message}}</p>
                                        </div>
                                    </div>
                            {{else}}
                                    <div class= "message recieved" >
                                        <div class="content">
                                            <p>{{this.message}}</p>
                                        </div>
                                    </div>
                            {{/if}}
                          {{/each}}

                    </div>
                     <div class="form_gui">
                        <form action='/guitinnhan' id='form-login' method='POST'>
                            <div class='div_input_row'>
                                 <input  type="hidden"  name="userName" value={{username}}
                                                class="form-control" >
                                <input  type="hidden"  name="type" value=true
                                        class="form-control" >
                                <textarea autocomplete='new-password'
                                    class='input'
                                    id='TinNhan'
                                    name='message'
                                    placeholder='Nhập tin nhắn bạn muốn gửi'
                                    required='required'
                                    type='text'
                                    value=''
                                    rows="5" 
                                    cols="40" ></textarea>
                                    
                                
                            </div>
                            
                            
                            <div class="div_btn">
                                <input type='submit' class='button btnChangeThongtin' value='GỬI' />
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="list-right">
                <div class="div_avatar">
                    <img src='https://bedental.vn/wp-content/uploads/2022/12/f637b0052729d9502ff03abe390fe051.jpg'
                        alt='ảnh thẻ header'
                        style='height: 150px;width: 150px;border-radius: 100px;'/>  
                    <p>thu_phuong</p> 
                </div>

                 <div class="item_menu_right">
                    <img src='https://babycaredoan.s3.ap-southeast-1.amazonaws.com/iconListNew.png'
                        alt='ảnh thẻ header'
                        style='height: 28px; margin:14px 15px 14px 18px;'/>  
                    <p>Bài viết</p> 
                </div>

                 <div class="item_menu_right">
                    <img src='https://babycaredoan.s3.ap-southeast-1.amazonaws.com/iconNew.png'
                        alt='ảnh thẻ header'
                        style='height: 28px; margin:14px 15px 14px 18px;'/>  
                    <p>Bài viết chờ phê duyệt</p> 
                </div>

                <a class='item_menu_right_pass' href='/home'>
                    <p>Đổi mật khẩu</p>
                </a>
                 
               
            </div>
        </div>

        
    </div>
 </div>
        
        
